<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.sw2017.calculator.Calculator">

    <Button
        android:id="@+id/buttonC"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/_C"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintRight_toLeftOf="@+id/button0" />

    <Button
        android:id="@+id/button0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/_0"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintRight_toLeftOf="@+id/buttonEqu"
        app:layout_constraintLeft_toRightOf="@+id/buttonC" />

    <Button
        android:id="@+id/buttonEqu"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/_equ"
        android:layout_marginStart="184dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintRight_toLeftOf="@+id/buttonDiv"
        app:layout_constraintLeft_toRightOf="@+id/button0" />

    <Button
        android:id="@+id/buttonDiv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/_div"
        android:layout_marginStart="272dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMult"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/buttonEqu" />

    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/_1"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="96dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonC"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:layout_constraintRight_toLeftOf="@+id/button2"
        app:layout_constraintLeft_toRightOf="parent" />


    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/_2"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="96dp"
        app:layout_constraintBottom_toBottomOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        app:layout_constraintRight_toLeftOf="@+id/button3"
        app:layout_constraintLeft_toRightOf="@+id/button1"/>


    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/_3"
        android:layout_marginStart="184dp"
        android:layout_marginBottom="96dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonEqu"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        app:layout_constraintRight_toLeftOf="@+id/buttonMult"
        app:layout_constraintLeft_toRightOf="@+id/button2"/>

    <Button
        android:id="@+id/buttonMult"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/_mult"
        android:layout_marginStart="272dp"
        android:layout_marginBottom="96dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonDiv"
        app:layout_constraintTop_toBottomOf="@+id/buttonMinus"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button3"/>


    <Button
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/_4"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="184dp"
        app:layout_constraintBottom_toBottomOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintRight_toLeftOf="@+id/button5"
        app:layout_constraintLeft_toRightOf="parent"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/_5"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="184dp"
        app:layout_constraintBottom_toBottomOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button8"
        app:layout_constraintRight_toLeftOf="@+id/button6"
        app:layout_constraintLeft_toRightOf="@+id/button4"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/_6"
        android:layout_marginStart="184dp"
        android:layout_marginBottom="184dp"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button9"
        app:layout_constraintRight_toLeftOf="@+id/buttonMinus"
        app:layout_constraintLeft_toRightOf="@+id/button5"/>

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/_minus"
        android:layout_marginStart="272dp"
        android:layout_marginBottom="184dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonMult"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlus"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button6"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/_7"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="272dp"
        android:layout_marginTop="81dp"
        app:layout_constraintBottom_toBottomOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintRight_toLeftOf="@+id/button8"
        app:layout_constraintLeft_toRightOf="parent"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/_8"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="272dp"
        android:layout_marginTop="81dp"
        app:layout_constraintBottom_toBottomOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintRight_toLeftOf="@+id/button9"
        app:layout_constraintLeft_toRightOf="@+id/button7"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/_9"
        android:layout_marginStart="184dp"
        android:layout_marginBottom="272dp"
        android:layout_marginTop="81dp"
        app:layout_constraintBottom_toBottomOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintRight_toLeftOf="@+id/buttonPlus"
        app:layout_constraintLeft_toRightOf="@+id/button8"/>

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/_plus"
        android:layout_marginStart="272dp"
        android:layout_marginBottom="272dp"
        android:layout_marginTop="81dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonMinus"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button9"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:text="0"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
